<script src="~/scripts/jquery-3.1.1.js"></script>

<script>
        function Check() {

            var flag=1;
            var UserName = document.getElementById("UserName");
            var Password = document.getElementById("Password");
            var Code = document.getElementById("Code");

            if (UserName.value == "" )
            {
            	flag=0;
                document.getElementById("UserNameL").innerText = "*用户名不能为空";
            }

            if (Password.value == "")
            {
            	flag=0;
                document.getElementById("PasswordL").innerText = "*密码不能为空";
            }

            if (flag==1){
            	MYGET(UserName.value,Password.value,Code.value);
            	return true;
            }
            else{
            	return false;
            }
        }

        function mouseover(x) {
            x.style.background = "aqua";
        }
        function mouseout(x) {
            x.style.background = "beige";
        }

        function _focus(ipt) {
            var nextnode = ipt.nextElementSibling;
            nextnode.innerText = "";
        }


        function MYGET(x, y,z) {
            $.ajax({
                type: "post", url: "/User/Login", data: "UserName="+x+"&Password="+ y+"&code="+z, success: function (rm) {
                    //alert(JSON.stringify(code));
                    if(rm.flag)
                    {
                        window.location.href = rm.Message;
                    }
                    else{
                        document.getElementById("ErrorL").innerText = rm.Message;
                    }
                }, dataType: "json"
            })
        }

</script>

<div>

    <form >
        <fieldset>
            <legend align="left">登陆</legend>
            <div>
                <label id="ErrorL" style="color:red"></label>
            </div>

            <div class="form-group">
                姓名：<input type="text" name="UserName" id="UserName" onfocus="_focus(this)" placeholder="请输入用户名" /><lable style="color:red" id="UserNameL"></lable><br />
            </div>

            <div class="form-group">
                密码：<input type="text" name="Password" id="Password" onfocus="_focus(this)" placeholder="请输入密码" /><lable style="color:red" id="PasswordL"></lable><br />
            </div>

            <div class="form-group">
                验证：<input type="text" id="Code" style="width:50px" />
                <img id="GL_StandardCode"  style="cursor: pointer;" src="@Url.Action("GetCode", "User")?t=@DateTime.Now.Ticks" title="看不清，点击换一张" />
                @*<label id="CodeL" style="color:red"></label><input type="button" onclick="GetCode()" value="获取验证码">*@
            </div>

            <div class="form-group">
                <input type="button" value="Login" onclick="Check()" onmouseout="mouseout(this)" onmouseover="mouseover(this)" class="btn btn-default" />
                <input type="button" value="Register" onclick="window.location.href('/User/Register') " onmouseout="mouseout(this)" onmouseover="mouseover(this)" class="btn btn-default" />
            </div>
        </fieldset>
    </form>
</div>

<script>
    $("#GL_StandardCode").click(function () {
        var newSrc = "@Url.Action("GetCode", "User")" + "?t=" + (new Date()).getTime();
        this.src=newSrc;
        return false;
    });
</script>